<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/score"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/score_back"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="95dp" />

    <ImageView
        android:id="@+id/Star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:srcCompat="@drawable/three_star"
        tools:layout_editor_absoluteX="33dp" />

    <ImageView
        android:id="@+id/next_level"
        android:layout_width="120dp"
        android:layout_height="58dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/try_again"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:srcCompat="@drawable/next_level" />

    <ImageView
        android:id="@+id/try_again"
        android:layout_width="123dp"
        android:layout_height="58dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:srcCompat="@drawable/try_again" />

    <TextView
        android:id="@+id/Result_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="252dp"
        android:text="TextView"
        android:textColor="#494949"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />

</android.support.constraint.ConstraintLayout>